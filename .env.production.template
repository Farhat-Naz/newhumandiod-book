# ==========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ==========================================
# Use this as a template for production deployment
# Fill in actual values and add to your hosting platform
# (Vercel, Render, Railway, etc.)

# ==========================================
# DATABASE CONFIGURATION (Render/Railway)
# ==========================================
# This will be auto-provided by Render PostgreSQL
DATABASE_URL=postgresql://user:password@host:5432/database
POSTGRES_USER=physicalai
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=physicalai_db

# ==========================================
# JWT AUTHENTICATION
# ==========================================
# IMPORTANT: Generate secure key with: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_USE_OPENSSL_RAND_HEX_32_TO_GENERATE
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==========================================
# QDRANT VECTOR DATABASE (Qdrant Cloud)
# ==========================================
# Get from: https://cloud.qdrant.io/
QDRANT_URL=https://your-cluster-id.qdrant.io:6333
QDRANT_API_KEY=YOUR_QDRANT_API_KEY_HERE

# ==========================================
# CLAUDE API (Required for RAG)
# ==========================================
# Get from: https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-api03-YOUR_PRODUCTION_CLAUDE_API_KEY
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# ==========================================
# OLLAMA (Optional - only if self-hosting)
# ==========================================
OLLAMA_URL=
OLLAMA_EMBEDDING_MODEL=qwen2.5:latest

# ==========================================
# TRANSLATION SERVICE (Optional)
# ==========================================
TRANSLATION_API_KEY=YOUR_TRANSLATION_API_KEY_IF_NEEDED
TRANSLATION_MODEL=gpt-4o-mini

# ==========================================
# FRONTEND/BACKEND URLS (Update after deployment)
# ==========================================
# Update these after deploying to Vercel and Render
FRONTEND_URL=https://your-app.vercel.app
ALLOWED_ORIGINS=https://your-app.vercel.app
CORS_ORIGINS=https://your-app.vercel.app

BACKEND_API_URL=https://physicalai-backend.onrender.com
RAG_WS_URL=wss://physicalai-rag.onrender.com

# ==========================================
# RATE LIMITING (Production)
# ==========================================
RATE_LIMIT_PER_MINUTE=100
AUTH_RATE_LIMIT_PER_15MIN=5
RAG_RATE_LIMIT_PER_MINUTE=20

# ==========================================
# LOGGING (Production)
# ==========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==========================================
# PRODUCTION FLAGS
# ==========================================
NODE_ENV=production
PYTHON_ENV=production
DEBUG=false

# ==========================================
# SECURITY (Production Settings)
# ==========================================
BCRYPT_ROUNDS=12
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# ==========================================
# EMAIL SERVICE (Optional - for notifications)
# ==========================================
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM_ADDRESS=noreply@physicalai.com
EMAIL_FROM_NAME=Physical AI Platform
EMAIL_USERNAME=YOUR_EMAIL_USERNAME
EMAIL_PASSWORD=YOUR_EMAIL_PASSWORD

# ==========================================
# MONITORING (Optional)
# ==========================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# ==========================================
# DEPLOYMENT KEYS (For CI/CD)
# ==========================================
# Add these to GitHub Secrets, not here!
# VERCEL_TOKEN=
# RENDER_API_KEY=
# GITHUB_TOKEN=
