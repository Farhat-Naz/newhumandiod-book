# ==========================================
# LOCAL DEVELOPMENT ENVIRONMENT VARIABLES
# ==========================================
# Copy this file to .env for local development
# DO NOT commit .env file to git!

# ==========================================
# DATABASE CONFIGURATION (Docker Compose)
# ==========================================
POSTGRES_USER=physicalai
POSTGRES_PASSWORD=devpassword123
POSTGRES_DB=physicalai_db
DATABASE_URL=postgresql://physicalai:devpassword123@localhost:5432/physicalai_db

# ==========================================
# JWT AUTHENTICATION
# ==========================================
# Generate a secure key: openssl rand -hex 32
JWT_SECRET=development-secret-key-change-for-production-12345678901234567890
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==========================================
# QDRANT VECTOR DATABASE (Docker Compose)
# ==========================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# ==========================================
# CLAUDE API (Required for RAG chatbot)
# ==========================================
# Get your key from: https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-api03-YOUR_ACTUAL_CLAUDE_API_KEY_HERE
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# ==========================================
# OLLAMA (Optional - for local embeddings)
# ==========================================
# Install: https://ollama.ai
# Run: ollama pull qwen2.5
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_EMBEDDING_MODEL=qwen2.5:latest

# ==========================================
# TRANSLATION SERVICE (Optional)
# ==========================================
TRANSLATION_API_KEY=
TRANSLATION_MODEL=seamlessm4t

# ==========================================
# FRONTEND/BACKEND URLS
# ==========================================
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

BACKEND_API_URL=http://localhost:8000
RAG_WS_URL=ws://localhost:8001

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_PER_MINUTE=100
AUTH_RATE_LIMIT_PER_15MIN=5
RAG_RATE_LIMIT_PER_MINUTE=20

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# ==========================================
# DEVELOPMENT FLAGS
# ==========================================
NODE_ENV=development
PYTHON_ENV=development
DEBUG=true

# ==========================================
# SECURITY (Development Settings)
# ==========================================
BCRYPT_ROUNDS=12
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax
