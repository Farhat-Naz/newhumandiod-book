# Database Configuration
POSTGRES_USER=physicalai
POSTGRES_PASSWORD=devpassword
POSTGRES_DB=physicalai_db
DATABASE_URL=postgresql://physicalai:devpassword@localhost:5432/physicalai_db

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Claude API (for RAG answer refinement)
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-sonnet-20240229

# Ollama (for Qwen embeddings)
OLLAMA_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=qwen2.5:latest

# Translation Service (optional - choose one)
TRANSLATION_API_KEY=
TRANSLATION_MODEL=seamlessm4t  # Options: seamlessm4t, qwen2.5-translation, gpt-4o-mini

# Email Service (for password reset)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM_ADDRESS=noreply@physicalai.com
EMAIL_FROM_NAME=Physical AI Course
EMAIL_USERNAME=
EMAIL_PASSWORD=

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Backend API URL (for frontend)
BACKEND_API_URL=http://localhost:8000
RAG_WS_URL=ws://localhost:8001/chat

# Deployment (Production)
VERCEL_TOKEN=
RENDER_API_KEY=
GITHUB_TOKEN=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
AUTH_RATE_LIMIT_PER_15MIN=5
RAG_RATE_LIMIT_PER_MINUTE=20

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # Options: json, text

# Performance
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0
QDRANT_TIMEOUT=30

# Security
BCRYPT_ROUNDS=12
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# Development
NODE_ENV=development
PYTHON_ENV=development
DEBUG=false
